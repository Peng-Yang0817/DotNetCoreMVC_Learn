@{
    Layout = "~/Areas/Sys/Views/Sys/_Login.cshtml";
    //登入頁面
}

<h3 class="text-center">Login</h3>

<div class="container Padding_Login_RenderBody">
    <div class="row">
        
        <div class="col-md-10 mx-auto mt-5">
            <form>
                <div class="mb-3">
                    <label for="username" class="form-label">UserName</label>
                    <input type="text" class="form-control form-control-lg" id="username" placeholder="Enter Username">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control form-control-lg" id="password" placeholder="Enter Password">
                </div>
                <div class="d-flex justify-content-center Margintop_LoginOrRegPag_button">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                </div>
                
            </form>
        </div>
    </div>
</div>